{
  "extends": ["eslint-config-quick"],
  "plugins": ["jest", "node", "import"],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "globalReturn": false,
      "generators": true,
      "objectLiteralDuplicateProperties": false
    },
    "sourceType": "module"
  },
  "rules": {
    "global-require": 0
  },
  "overrides": [
    {
      "files": ["scripts/**/*.js"],
      "rules": {
        "node/no-unpublished-require": 0,
        "no-console": 0
      }
    },
    {
      "files": ["test/**/*.js"],
      "env": {
        "jest/globals": true
      },
      "rules": {
        "node/no-unpublished-require": 0,
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "error",
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error"
      }
    },
    {
      "files": ["index.js"],
      "rules": {
        "node/no-unpublished-require": 0
      }
    }
  ]
}
